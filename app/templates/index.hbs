{{#bs-navbar}}
  <div class="container">
    JSList
  </div>
{{/bs-navbar}}

<div class="container">
  <div class="collections-strip clearfix">
    <div class="collections-strip-inner">
      {{#each collections as |collection|}}
        {{collection-block collection=collection}}
      {{/each}}
    </div>
  </div>
</div>

<div class="container" style="margin-top: 20px;">
  {{#each-in filters as |_ filter|}}
    <button class="btn btn-filter {{if (get this filter.param) 'active'}}" {{action 'toggleFilter' filter.param}}>
      {{#if filter.tooltip}}
        {{#tooltip-on-element}}
          {{filter.tooltip}}
        {{/tooltip-on-element}}
      {{/if}}
      {{filter.name}}
    </button>
  {{/each-in}}

  <a href="#" {{action 'clearFilters'}}>
    Clear filters
  </a>
</div>

<div class="container">
  {{#each filteredFrameworks as |framework|}}
    {{framework-block framework=framework}}
  {{/each}}
</div>

{{outlet}}
